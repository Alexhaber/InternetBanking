@model InternetBanking.Core.Application.ViewModels.SavingAccount.AddSavingAccountViewModel

@{
    ViewData["Title"] = "Agregar Cuenta de Ahorro";
}

<h2>Agregar Cuenta de Ahorro</h2>

<form asp-action="AddSavingAccount" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Monto Inicial</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ClientId" />

    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-action="Productos" asp-route-id="@Model.ClientId" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
