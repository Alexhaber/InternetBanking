@model InternetBanking.Core.Application.ViewModels.CreditCard.AddCreditCardViewModel

@{
    ViewData["Title"] = "Agregar Tarjeta de Crédito";
}

<h2>Agregar Tarjeta de Crédito</h2>

<form asp-action="AddCreditCard" method="post">
    <div class="form-group">
        <label asp-for="Limit" class="control-label">Límite de Crédito</label>
        <input asp-for="Limit" class="form-control" />
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Monto Inicial</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserId" />

    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-action="Productos" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
