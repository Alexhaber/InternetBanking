@using InternetBanking.Core.Application.ViewModels.Beneficiary
@model SaveBeneficiaryViewModel

<div class="row">
	<div class="col-md-4 offset-4">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title text-white bg-danger">@($"Deleting the beneficiary: {Model.BeneficiaryAccountId}")</h3>
			</div>
			<div class="card-body">
				<form asp-action="DeletePost">

					<input asp-for="UserId" type="hidden" />
					<input asp-for="BeneficiaryAccountId" type="hidden" />

					<p class="card-text">Are you sure you want to delete this beneficiary?</p>

					<button type="submit" class="btn btn-danger">Delete</button>
					<a asp-action="Index" class="btn btn-warning">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>
