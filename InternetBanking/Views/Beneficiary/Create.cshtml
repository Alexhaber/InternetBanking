@using InternetBanking.Core.Application.ViewModels.Beneficiary
@using System.Security.Claims
@model SaveBeneficiaryViewModel

<div class="row">
	<div class="col-md-6 offset-3">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Adding a new beneficiary</h3>
			</div>
			<div class="card-body">
				<form asp-action="Create">
					<input asp-for="UserId" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier)"/>
					<div class="mb-3">
						<label asp-for="BeneficiaryAccountId" class="form-label"> Beneficiary Account Id</label>
						<input asp-for="BeneficiaryAccountId" class="form-control" placeholder="Beneficiary account Id" />
						<span asp-validation-for="BeneficiaryAccountId" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-primary">Add</button>
					<a asp-action="Index" class="btn btn-warning">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>
